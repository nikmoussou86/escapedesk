{% extends './base.twig' %}

{% block title %}Edit User - escapedesk{% endblock %}

{% block content %}
<div class="w-full max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-semibold mb-4">Edit User</h1>
    <form action="/users/update" method="POST" class="space-y-4">
        <input type="hidden" name="id" value="{{ user.id }}" />
        <div>
            <label for="user_name" class="block text-sm font-medium text-gray-700">Username</label>
            <input type="text" name="user_name" id="user_name" value="{{ user.userName }}" required class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
        </div>
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" name="email" id="email" value="{{ user.email }}" required class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
        </div>
        <div>
            <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
            <input type="password" name="password" id="password" required class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
        </div>
        <div>
            <label for="employee_code" class="block text-sm font-medium text-gray-700">Employee Code</label>
            <input type="text" name="employee_code" id="employee_code" value="{{ user.employeeCode }}" required class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
        </div>
        <div>
            <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
            <select name="type" id="type" class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                <option value="" disabled {% if not user.type %}selected{% endif %}>Select type...</option>
                <option value="1" {% if user.getTypeLabel() == 'Manager' %}selected{% endif %}>Manager</option>
                <option value="2" {% if user.getTypeLabel() == 'Employee' %}selected{% endif %}>Employee</option>
            </select>
        </div>
        <div>
            <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 sm:text-sm">
                Update
            </button>
        </div>
    </form>
</div>
{% endblock %}