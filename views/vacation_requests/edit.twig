{% extends './base.twig' %}

{% block title %}Edit Vacation Request - My App{% endblock %}

{% block content %}
<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-semibold mb-4">Edit Vacation Request</h1>
    <form action="/vacation_requests/update" method="POST" class="space-y-4">
        <input type="hidden" name="id" value="{{ vacationRequest.id }}" />
        <div>
            <ul>
                <li><b>Name</b>: {{ vacationRequest.userName }}</li>
                <li><b>Date range</b>: {{ vacationRequest.dateFrom }} to {{ vacationRequest.dateTo }}</li>
                <li><b>Reason</b>: {{ vacationRequest.reason }}</li>
                <li><b>Submitted</b>: {{ vacationRequest.createdAt }}</li>
            </ul>
        </div>
        <div>
            <label for="status" class="block text-sm font-medium text-gray-700">Status</label>
            <select name="status" id="status" class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                <option value="" disabled {% if not vacationRequest.status %}selected{% endif %}>Select status...</option>
                <option value="0" {% if vacationRequest.status == 'Pending' %}selected{% endif %}>Pending</option>
                <option value="1" {% if vacationRequest.status == 'Approved' %}selected{% endif %}>Approved</option>
                <option value="2" {% if vacationRequest.status == 'Rejected' %}selected{% endif %}>Rejected</option>
            </select>
        </div>
        <div>
            <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 sm:text-sm">
                Update
            </button>
        </div>
    </form>
</div>
{% endblock %}