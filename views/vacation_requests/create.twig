{% extends './base.twig' %}

{% block title %}Create Vacation Request - My App{% endblock %}

{% block content %}
    <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold mb-4">Create Vacation Request</h1>
        <form action="/vacation_requests/store" method="POST" class="space-y-4">
            <input type="hidden" name="user_id" value="2">
            <div>
                <label for="date_from" class="block text-sm font-medium text-gray-700">Date from</label>
                <input type="date" name="date_from" id="date_from" class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
            </div>
            <div>
                <label for="date_to" class="block text-sm font-medium text-gray-700">Date to</label>
                <input type="date" name="date_to" id="date_to" class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
            </div>
            <div>
                <label for="reason" class="block text-sm font-medium text-gray-700">Reason</label>
                <textarea name="reason" id="reason" required class="block w-full mt-1 px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"></textarea>
            </div>
            <div>
                <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 sm:text-sm">
                    Create
                </button>
            </div>
        </form>
    </div>
{% endblock %}